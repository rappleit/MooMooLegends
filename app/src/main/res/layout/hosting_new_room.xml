        android:background="@drawable/player_background"
        android:fontFamily="@font/pixeloid_sans"
        android:textColor="#000000"
        android:gravity="center"
        android:text="Test"


        />
    <TextView
        android:id="@+id/next_challenge_countdown_text"
        android:layout_width="339dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="815dp"
        android:text="Next Challenge Starting In"
        android:fontFamily="@font/pixeloid_sans"
        android:textSize="24sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/time_to_next_challenge"
        android:layout_width="225dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="855dp"
        android:text="Test Text"
        android:fontFamily="@font/pixeloid_sans"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        />

</RelativeLayout>
