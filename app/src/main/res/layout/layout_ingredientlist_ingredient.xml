<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bermuda_card"
    android:paddingHorizontal="14dp"
    android:paddingVertical="16dp"
    android:orientation="vertical"
    android:layout_marginVertical="6dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        android:textSize="14dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:fontFamily="@font/pixeloid_sans_bold"
        android:id="@+id/ingredientListItem_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="12dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:fontFamily="@font/pixeloid_sans"
        android:id="@+id/ingredientListItem_qty"
        />
</LinearLayout>