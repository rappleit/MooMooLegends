<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFA3B1" /> <!-- Background color -->
        </shape>
    </item>
    <!-- Shadow -->
    <item android:bottom="4dp"> <!-- Adjust the y-offset to control the shadow's vertical position -->
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Semi-transparent black color -->
        </shape>
    </item>
</layer-list>
